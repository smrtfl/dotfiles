" .ideavimrc is a configuration file for IdeaVim plugin. It uses
"   the same commands as the original .vimrc configuration.
" You can find a list of commands here: https://jb.gg/h38q75
" Find more examples here: https://jb.gg/share-ideavimrc

" Source your .vimrc
source ~/.vimrc

set leader = " "
set number
set relativenumber

set clipboard+=unnamedplus

"" -- Suggested options --
" Show a few lines of context around the cursor. Note that this makes the
" text scroll if you mouse-click near the start or end of the window.
set scrolloff=5

" Do incremental searching.
set incsearch

" Don't use Ex mode, use Q for formatting.
map Q gq

" --- Enable IdeaVim plugins https://jb.gg/ideavim-plugins

" Highlight copied text
Plug 'machakann/vim-highlightedyank'
" Commentary plugin
Plug 'tpope/vim-commentary'


"" -- Map IDE actions to IdeaVim -- https://jb.gg/abva4t
"" Map \r to the Reformat Code action
map <Space>fc <Action>(ReformatCode)

"" Map <leader>d to start debug
"map <leader>d <Action>(Debug)

"" Map \b to toggle the breakpoint on the current line
"map \b <Action>(ToggleLineBreakpoint)

" FuzzyFinder
map <Space>ff :action GotoFile<CR>
map <Space>fg :action SearchEverywhere<CR>

" Navigation
map <C-H> <C-W>h
map <C-J> <C-W>j
map <C-K> <C-W>k
map <C-L> <C-W>l
map <C-W>= :action tabshifter.Actions.EqualSizeSplit<CR>
map <C-W><C-J> :action TabShiftActions.ShiftDown<CR>
map <C-W><C-K> :action TabShiftActions.ShiftUp<CR>
map <C-W><C-H> :action TabShiftActions.ShiftLeft<CR>
map <C-W><C-L> :action TabShiftActions.ShiftRight<CR>
map <C-W>+ :action TabShiftActions.StretchDown<CR>
map <C-W>- :action TabShiftActions.StretchUp<CR>
map <C-W>< :action TabShiftActions.StretchLeft<CR>
map <C-W>> :action TabShiftActions.StretchRight<CR>
map <C-W>M :action TabShiftActions.ToggleMaximizeRestore<CR>

map <C-O> :action Back<CR>
map <C-I> :action Forward<CR>

" Git
map <Space>gb :action Annotate<CR>

" LSP
map gr :action GotoDeclaration<CR>
map gd :action GotoDeclaration<CR>
map gI :action GotoImplementation<CR>
map <C-W><C-D> :action ShowErrorDescription<CR>
map <C-W>d :action ShowErrorDescription<CR>
map <Space>rn :action RenameElement<CR>
map <Space>ca :action ShowIntentionActions<CR>

" Harpoon
map <Space>hh :action ShowHarpoon<CR>
map <Space>ha :action AddToHarpoon<CR>
map <M-1> :action GotoHarpoon1<CR>
map <M-2> :action GotoHarpoon2<CR>
map <M-3> :action GotoHarpoon3<CR>
map <M-4> :action GotoHarpoon4<CR>
map <M-5> :action GotoHarpoon5<CR>
map <M-i> :action NextHarpoonItem<CR>
map <M-o> :action PreviousHarpoonItem<CR>

" Explorer
map <Space>fe :action SelectIn<CR>
